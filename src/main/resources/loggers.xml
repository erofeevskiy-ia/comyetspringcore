<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="eventLogger" class="com.yet.spring.core.loggers.ConsoleEventLogger"/>


    <bean id="fileEventLogger" class="com.yet.spring.core.loggers.FileEventLogger" init-method="init">
        <constructor-arg value="src\main\resources\myFile.txt"/>
    </bean>

    <bean id="cacheFileEventLogger" class="com.yet.spring.core.loggers.CacheFileLogger" parent="fileEventLogger"
          destroy-method="destroy">
        <constructor-arg value="10"/>
        <!--<constructor-arg value="src\main\resources\myFile.txt"/>-->
    </bean>
    <bean id="event" class="com.yet.spring.core.loggers.Event" scope="prototype">
        <constructor-arg>
            <bean class="java.util.Date"/>
        </constructor-arg>
        <constructor-arg>
            <bean id="dateFormat" class="java.text.DateFormat" factory-method="getDateTimeInstance"/>
        </constructor-arg>
    </bean>
</beans>